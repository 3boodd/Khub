html:after {
  content: "";
  position: absolute;
	top: 0px;
	left: 0px;
  width: 100vw;
  height: 100vh;
  background-image: url("|backgroundURL|");
  background-size: cover;
  background-position: center;
  background-color: transparent !important;
  opacity: |backgroundOpacity|;
  mix-blend-mode: |backgroundBlendMode|;
  z-index: 999999999999;
  pointer-events: none;
}